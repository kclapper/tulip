@{
  Layout = "/Views/Chat/_ChatLayout.cshtml";
}

<div class="container bg-white m-5 p-4 rounded">
    <div class="row d-none">
        <div class="col-1 pe-1">
            To:
        </div>
        <div class="col-5">
            <input type="text" id="recipientInput" value="@Model.CurrentChat.OtherUser.UserName" />
        </div>
    </div>
    <div class="row">
        <div class="col-1 pe-1">
            Message:
        </div>
        <div class="col-5">
            <input type="text" id="messageInput" />
        </div>
    </div>
    <input type="button" id="sendButton" value="Send" />

</div>
<ul id="messageList">
    @foreach (var message in Model.CurrentChat.Messages)
    {
        <li>
            [@message.Timestamp] @message.Sender.UserName: @message.Message
        </li>
    }
</ul>

@section scripts {

}
