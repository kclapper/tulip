@{
  Layout = "/Views/Chat/_ChatLayout.cshtml";
}

<div class="container bg-white m-5 p-4 rounded">
    <form id="composeEditor">
        <div class="form-group row">
            <label for="recipientInput" class="col-sm-2 col-form-label">To:</label>
            <div class="col-sm-10">
                <input type="text" id="recipientInput" class="form-control" required />
            </div>
        </div>
        <div class="form-group row">
            <label for="recipientInput" class="col-sm-2 col-form-label">Message:</label>
            <div class="col-sm-10">
                <input type="text" id="messageInput" spellcheck="true" class="form-control" required />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
</div>

