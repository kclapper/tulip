@{
  Layout = "/Views/Chat/_ChatLayout.cshtml";
}

<div class="container bg-white m-5 p-4 rounded">
    <form id="composeEditor" autocomplete="off">
        <div class="form-group row">
            <label for="recipientInput" class="col-sm-2 col-form-label">To:</label>
            <div class="dropdown col-sm-10">
                <input type="text" id="recipientInput" class="form-control dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" required />
                <div id="userSearch" class="dropdown-menu" aria-labelledby="recipientInput" hidden>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="recipientInput" class="col-sm-2 col-form-label">Message:</label>
            <div class="col-sm-10">
                <input type="text" id="messageInput" spellcheck="true" class="form-control" required />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
</div>

@section scripts {
    <script src="~/js/chat/compose.js" type="module"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
}
